<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <div>
        <h2>Books</h2>
        <%= render 'books/index',books: @books %>
      </div>
      <div>
        <h2>投稿数の前日比・前週比</h2>
        <table>
         <tr>
           <th>今日の投稿数</th>
           <th>前日の投稿数</th>
           <th>前日比</th>
         </tr>
         <tr>
           <td>数字</td>
           <td>数字</td>
           <td>数字</td>
         </tr>
        </table>
        <table>
         <tr>
           <th>今週の投稿数</th>
           <th>前週の投稿数</th>
           <th>前週比</th>
         </tr>
         <tr>
           <td>数字</td>
           <td>数字</td>
           <td>数字</td>
         </tr>
        </table>
      </div>
    </div>
  </div>
</div>
